  "editorScript": [
    "file:./index.js",
    "file:../index.js"
  ],
  "editorStyle": "file:./index.css",
  "style": [
    "file:./style-index.css",
    "cozy-swiper-bundle"
  ],
  "viewScript": [
    "cozy-block--featured-content-box--frontend-script"
  ],
  "script": [
    "cozy-swiper-bundle"
  ],
  "render": "file:./render.php"
}