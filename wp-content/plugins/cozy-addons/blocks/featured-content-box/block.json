        "gap": 30
      }
    },
    "hoverShow": {
      "type": "boolean",
      "default": true
    },
    "stackedImage": {
      "type": "object",
      "default": {
        "verticalPosition": -25
      }
    },
    "galleryOptions": {
      "type": "object",
      "default": {
        "overlayOpacity": 0.6,
        "overlayColorHover": ""
      }
    },
    "margin": {
      "type": "object",
      "default": {
        "top": 0,
        "right": 0,
        "bottom": 0,
        "left": 0
      }
    },
    "pagination": {
      "type": "object",
      "default": {
        "enabled": true,
        "gap": 4,
        "width": 10,
        "height": 10,
        "borderRadius": 10,
        "activeWidth": 10,
        "activeHeight": 10,
        "activeBorderRadius": 10,
        "activeBorder": {
          "width": "",
          "style": "",
          "color": ""
